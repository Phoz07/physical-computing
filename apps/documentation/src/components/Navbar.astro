---
import { Image } from "astro:assets";
import phycomLogo from "../../public/logo.svg";
import { Github } from "@lucide/astro";
---

<div
  class="h-16 bg-white/30 backdrop-blur-md sticky top-0 w-full z-50 border-b border-white/20 flex items-center justify-center"
>
  <div class="container flex justify-between items-center px-4">
    <Image
      src={phycomLogo}
      class={"h-11"}
      alt={"Helmet Detection System for Automatic Door Access"}
    />
    <a
      class="uppercase bg-amber-400 hover:bg-amber-300 p-2 h-fit rounded-full font-bold px-4 flex gap-2 items-center"
      href="">
      <Github />
      Source Code</a
    >
  </div>
</div>
