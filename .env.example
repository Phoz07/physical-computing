# Environment variables for Docker Compose
# Copy this file to .env and adjust values as needed

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=physical_computing
POSTGRES_PORT=5432

# Nginx Configuration
HTTP_PORT=80

# Application URLs (accessed through Nginx)
# For local development (single domain)
NEXT_PUBLIC_API_URL=http://localhost
NEXT_PUBLIC_BASE_URL=http://localhost

# For production with subdomains (uncomment and update domain)
# NEXT_PUBLIC_API_URL=http://phy-api.domain.com
# NEXT_PUBLIC_BASE_URL=http://phycom.domain.com
